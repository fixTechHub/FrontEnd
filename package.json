{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:user": "npm run dev -w user-app",
        "dev:admin": "npm run dev -w admin-app",
        "dev": "concurrently \"npm:dev:*\"",
        "build:user": "npm run build -w user-app",
        "build:admin": "npm run build -w admin-app",
        "build": "npm run build:user && npm run build:admin"
    },
    "devDependencies": {
        "concurrently": "^8.0.0"
    },
    "dependencies": {
        "react-toastify": "^11.0.5",
        "simple-peer": "^9.11.1"
    }
}
